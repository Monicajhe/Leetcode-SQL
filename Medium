FROM Employee
WHERE Id IN (SELECT ManagerId
             FROM Employee
             GROUP BY ManagerId
             HAVING COUNT(Id) >= 5);
3)
SELECT e2.Name
FROM Employee e1, Employee e2
WHERE e1.ManagerId = e2.Id
GROUP BY e2.Id
HAVING COUNT(e1.Id) >= 5

