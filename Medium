1132. Reported Posts II

WITH t AS (SELECT action_date, 100* COUNT(DISTINCT Removals.post_id) / COUNT(DISTINCT post_id) AS avg_r
           FROM Actions
           LEFT JOIN Removals 
           USING (post_id)
           WHERE extra = 'spam'
           GROUP BY action_date)
SELECT ROUND(AVG(avg_r), 2) AS average_daily_percent
FROM t 

